@{
    /**/

    /**/
    ViewBag.Title = "Sayna";
}
<table id="clientsTable" class="table table-striped table-bordered" style="width:80%">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Position</th>
            <th>Office</th>
            <th>Age</th>
            <th>Salaire</th>
            <th>Supprimer</th>
            <th>Modifier</th>
        </tr>
    </thead>
</table>

    <a class="btn btn-success" style="margin-bottom:10px" onclick="PopupForm('@Url.Action("Ajouter", "Home")')"><i class="glyphicon glyphicon-plus"></i> Add New</a>
    @Html.ActionLink("Exporter", "Exporter", null, new { @class = "btn btn-Link glyphicon glyphicon-download-alt", })
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
<link href="//cdn.datatables.net/1.10.22/css/dataTables.bootstrap.min.css" rel="stylesheet" />

@section scripts{
    <script src="//cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
    <script src="//cdn.datatables.net/1.10.22/js/dataTables.bootstrap.min.js"></script>
    <script>

            var Popup,dataTable;
            $(document).ready(function () {
                dataTable = $('#clientsTable').DataTable({
                    "ajax": {
                        "url": "/Home/GetData",
                        "type": "GET",
                        "datatype": "JSON"
                    },
                    "columns": [
                        { "data": "Name" },
                        { "data": "Position" },
                        { "data": "Office" },
                        { "data": "Age" },
                        { "data": "Salary" },
                        {
                            "data": "EmployeeID", "render": function (data) {
                                return "<a class='btn btn-danger btn-sm' style='margin-left:5px'  onclick=Delete(" + data + ")><i class='glyphicon glyphicon-trash'></i> Delete</a>";

                            },

                        },
                        {
                            "data": "EmployeeID", "render": function (data) {
                                return "<a class='btn btn-default btn-sm' onclick=PopupForm('@Url.Action("Ajouter","Home")/" + data + "')><i class='glyphicon glyphicon-pencil'></i> Edit</a>";
                            },
                            "orderable": false,
                            "searchable": false,
                            "width": "150px"
                        }
                    ],

                });
            });
        function Delete(id) {
            if (confirm('Voulez-vous vraiment supprimer ce Client ?')) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete","Home")/' + id,
                    success: function (data) {
                        if (data.success) {
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }

                    }
                });
            }
        }
    function PopupForm(url) {
           
            var formDiv = $('<div/>');
            $.get(url)
            .done(function (response) {
                formDiv.html(response);

                Popup = formDiv.dialog({
                    autoOpen: true,
                    resizable: false,
                    title: 'Espace Employee Sayna Details',
                    height: 500,
                    width: 700,
                    close: function () {
                        Popup.dialog('destroy').remove();
                    }

                });
            });
        }

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            Popup.dialog('close');
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })

                        }
                    }
                });
            }
            return false;
        }

    </script>
}
